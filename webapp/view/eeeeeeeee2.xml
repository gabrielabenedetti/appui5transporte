<mvc:View
	controllerName="com.movc.appfinanceiro.controller.Object"
	xmlns="sap.m"
    xmlns:c="sap.suite.ui.commons"
    xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:semantic="sap.f.semantic"
    xmlns:f="sap.ui.layout.form"
    xmlns:si="sap.suite.ui.commons.statusindicator">

	<semantic:SemanticPage
		id="page"
		headerPinnable="false"
		toggleHeaderOnTitleClick="false"
		busy="{objectView>/busy}"
		busyIndicatorDelay="{objectView>/delay}">

		<semantic:titleHeading>
			<Title
				text="Detalhe do Documento"
				level="H2"/>
		</semantic:titleHeading>

		<semantic:headerContent>
            <ObjectIdentifier text="{i18n>AccountingDocumentText}: {AccountingDocument}"></ObjectIdentifier>
            <ObjectIdentifier text="{i18n>AccountingDocumentItemText}: {AccountingDocumentItem}"></ObjectIdentifier>
			<ObjectNumber
				number="{
					path: 'AmountInTransactionCurrency',
					formatter: '.formatter.numberUnit'
				}"
				unit="{TransactionCurrency}" />
		</semantic:headerContent>

		<semantic:sendEmailAction>
			<semantic:SendEmailAction id="shareEmail" press=".onShareEmailPress"/>
		</semantic:sendEmailAction>

        <semantic:content>
			<FlexBox
				alignItems="Start"
                justifyContent="SpaceBetween">
                <Panel backgroundDesign="Transparent">
                <f:SimpleForm id="SimpleFormDadosGerais"
                        editable="false"
                        layout="ResponsiveGridLayout"
                        adjustLabelSpan="true"
			            singleContainerFullSize="true">
                        <f:content>
                           <Label text="{i18n>CustomerText}" design="Bold"/>
                           <Text text="{Customer}"/>
                           <Label text="{i18n>FiscalYearText}" design="Bold" />
                           <Text text="{FiscalYear}"/>
                           <Label text="{i18n>PostingKeyText}" design="Bold" />
                           <Text text="{PostingKey}"/>
                           <Label text="{i18n>SalesDocumentText}" design="Bold" />
                           <Text text="{SalesDocument}"/>
                        </f:content>
	            <c:MicroProcessFlow>
		            <c:content>
					<c:MicroProcessFlowItem icon="sap-icon://activity-items"/>
					<c:MicroProcessFlowItem state="Success" icon="sap-icon://cart-approval"/>
					<c:MicroProcessFlowItem state="Warning" icon="sap-icon://payment-approval"/>
					<c:MicroProcessFlowItem state="Information" icon="sap-icon://shipping-status"/>
					<c:MicroProcessFlowItem state="Success" icon="sap-icon://accept"/>                     
		            </c:content>
	            </c:MicroProcessFlow>      
                </f:SimpleForm>
            </Panel>
            </FlexBox>
        </semantic:content>
	</semantic:SemanticPage>
</mvc:View>