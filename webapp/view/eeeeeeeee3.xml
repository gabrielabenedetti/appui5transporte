<mvc:View
	controllerName="com.movc.appfinanceiro.controller.Worklist"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:semantic="sap.f.semantic">

	<semantic:SemanticPage
		id="page"
		headerPinnable="false"
		toggleHeaderOnTitleClick="false">

		<semantic:titleHeading>
			<Title
				text="{i18n>worklistTitle}"
				level="H2"/>
		</semantic:titleHeading>

		<semantic:content>
			<Table
				id="table"
				width="auto"
				items="{
					path: '/ZZ1_AccDoc',
					sorter: {
						path: 'AccountingDocument',
						descending: false
					}
				}"
				noDataText="{worklistView>/tableNoDataText}"
				busyIndicatorDelay="{worklistView>/tableBusyDelay}"
				growing="true"
				growingScrollToLoad="true"
				updateFinished=".onUpdateFinished">

				<headerToolbar>
					<OverflowToolbar>
						<Title
							id="tableHeader"
							text="{worklistView>/worklistTableTitle}"
							level="H3"/>
						<ToolbarSpacer />
						<SearchField
							id="searchField"
							tooltip="{i18n>worklistSearchTooltip}"
							search=".onSearch">
							<layoutData>
								<OverflowToolbarLayoutData
									maxWidth="200px"
									priority="NeverOverflow"/>
							</layoutData>
						</SearchField>
					</OverflowToolbar>
				</headerToolbar>
				<columns>
					<Column id="nameColumn">
						<Text text="{i18n>tableNameColumnTitle}" id="nameColumnTitle"/>
					</Column>
					<Column id="FiscalYear" hAlign="End">
						<Text text="{i18n>FiscalYearTitle}" id="FiscalYearTitle"/>
					</Column>
					<Column id="Customer" hAlign="End">
						<Text text="{i18n>Customer}" id="CustomerTitle"/>
					</Column>
					<Column id="unitNumberColumn" hAlign="End">
						<Text text="{i18n>tableUnitNumberColumnTitle}" id="unitNumberColumnTitle"/>
					</Column>
				</columns>
				<items>
					<ColumnListItem
						type="Navigation"
						press=".onPress">
						<cells>
                            <!--<VBox>-->
                            <!--<HBox><Text text="{i18n>CompanyCodeText}: {CompanyCode}"/></HBox>-->
                            <!--<HBox><Text text="{i18n>AccountingDocumentText}: {AccountingDocument}"/></HBox>-->
                            <!--<HBox><Text text="{i18n>AccountingDocumentItemText}: {AccountingDocumentItem}"/></HBox>-->
                            <!--</VBox>-->
                            <ObjectIdentifier text="{AccountingDocument}"></ObjectIdentifier>
                            <Text text="{FiscalYear}"/>
                            <Text text="{Customer}"/>
							<ObjectNumber
								number="{
									path: 'AmountInTransactionCurrency',
									formatter: '.formatter.numberUnit'
								}"
								unit="{TransactionCurrency}" />
						</cells>
					</ColumnListItem>
				</items>
			</Table>
		</semantic:content>

		<semantic:sendEmailAction>
			<semantic:SendEmailAction id="shareEmail" press=".onShareEmailPress"/>
		</semantic:sendEmailAction>

		<semantic:footerMainAction>
			<semantic:FooterMainAction text="{i18n>ObjectButtonSave}" press="onPressSave"/>
		</semantic:footerMainAction>

	</semantic:SemanticPage>

</mvc:View>